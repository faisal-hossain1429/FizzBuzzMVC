@model FizzBuzzMVC.Models.FizzBuzz

<div class="container">
    <div class="row row-cols-1 row-cols-lg-2">
        <div class="col mt-5 border-end border-3">
            <h1 class="fw-bold lh-1">
                Fizz Fizz: A coding project</h1>
                <h5 class="lead text-black">
                    Living life in loops: A javascript program that displays numbers 1-100. Multiples of 3 display <strong>fizz</strong>, multiples of 5 display <strong>fizz fizz</strong>, and a multiple of both will display <strong>fizz buzz</strong>
                </h5>

                <div class="mt-4">
                    <h1 class="fw-bold lh-1">Instructions</h1>
                    <h5 class="lead text-black"> Choose a range and press the button</h5>
                </div>
        </div>

        <div class="col mt-5">
            <div>
                <h5>Enter Numbers</h5>
                @*Form Goes here*@
               
                <form asp-controller="Home" asp-action="FBPage" method="post">

                    <div class="form-group">
                        <label asp-for="FizzValue">Fizz Value</label>
                        <input type="number" asp-for="FizzValue" class="form-control" placeholder="Enter Fizz" value="@Model.FizzValue" />
                    </div>

                    <div class="form-group">
                        <label asp-for="BuzzValue">Buzz Value</label>
                        <input type="number" asp-for="BuzzValue" class="form-control" placeholder="Enter Buzz" value="@Model.BuzzValue" />
                    </div>

                    <button type="submit" class="btn btn-dark">Submit</button>
                </form>




                <h2 class="mt-5 border-bottom border-2">Results</h2>
                <div class="table-responsive">
                   @*Table goes here*@

                   @if (@Model.Result.Count > 0) 
                   {
                        <table class="table-striped table-hover table table-dark"> 
                            <thead>
                                <tr><th colspan="5">Fizz Buzz Results</th></tr>
                            </thead>
                            @for (int i = 0; i < Model.Result.Count(); i += 5)
                            {
                                <tr><td>@Model.Result[i]</td><td>@Model.Result[i+1]</td><td>@Model.Result[i+2]</td><td>@Model.Result[i+3]</td><td>@Model.Result[i+4]</td></tr>
                            }
                       </table>

                   }
                </div>
            </div>
        </div>
    </div>
</div>
